.timelogs
  %table.striped{:cellpadding => "0", :cellspacing => "0", :border => "0"}
    %thead
      %tr
        %td Description
        %td Date
        %td Time
        %td &nbsp;
    %tbody
      - time_logs.each do |time_log|
        %tr
          %td= time_log.description
          %td= time_log.started_at.to_date.to_s(:long_ordinal)
          %td= time_log.total_time.to_s :time
          %td
            %input{:type => "checkbox"}
